@model MovieShopApp.Core.Entities.Casts

@{
ViewData["Title"] = "Cast Details";
}

<h2>@Model.Name</h2>

<div>
    <h3>Cast Information</h3>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Profile Path:</strong> <a href="@Model.ProfilePath" target="_blank">@Model.ProfilePath</a></p>
    <p><strong>TMDb URL:</strong> <a href="@Model.TmdbUrl" target="_blank">@Model.TmdbUrl</a></p>

    <h3>Movies</h3>
    <ul>
        @foreach (var movieCast in Model.MovieCasts) {
        <li>@movieCast.Movie.Title (Role: @movieCast.Character)</li>
        }
    </ul>
</div>
